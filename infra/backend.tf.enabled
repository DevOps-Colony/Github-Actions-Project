# This file will be renamed to backend.tf during GitHub Actions workflow
# The workflow will replace the bucket name with the actual value from terraform.tfvars

terraform {
  backend "s3" {
    bucket         = "BUCKET_NAME_PLACEHOLDER"
    key            = "terraform/infrastructure.tfstate"
    region         = "us-west-2"
    dynamodb_table = "terraform-state-lock"
    encrypt        = true
  }
}